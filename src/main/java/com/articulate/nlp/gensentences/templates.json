{
  "overview":"Templates for synthetic sentence generation",
  "default_settings":{
      // These settings can be over-ridden in individual templates.",
      "modal":{
        "on":true,
        "freq":0.1,
        "neg_freq":0.2
      },
      "question":{
        "on":true,
        "freq":0.1,
        "neg_freq":0.2
      },
      "tense":{
        "on":true,
        "none":0.1, // will use default tense in frame
        "past":0.3,
        "present":0.3,
        "future":0.1
      },
      "num_to_gen":100    
  },
  "templates":[
    {
      "name":"Orientation",
      "num_to_gen":50,
      "english":{
        "example":"The book is on the table.",
        "frame":{
            "tense_default":"%1 <verb=be> %n{not} %2 %3."
        },
        "frame_question":{
            "tense_default":"<verb=be> %1 %n{not} %2 %3?",
            "tense_future":"Will %1 %n{not} be %2 %3?"
        },
        "%1":{
            "sumo_terms":["Artifact","AnatomicalStructure"],
            "countable":{"possible":true, "freq":0.1}
        },
        "%2":{
            "sumo_terms":["Orientation"],
            "countable":{"possible":false, "freq":0.0}
        },
        "%3":{
            "sumo_terms":["Object"],
            "countable":{"possible":true, "freq":0.1}
        },
        "logic":"(exists (?A1 ?O2) (and (instance ?A1 %1) (instance ?O2 %3)) %tense{%n{not(}(orientation ?A1 ?O2 %2)%n{)}}))"
      }
    }
  ]
}
