/*
  templates.json - templates for synthetic sentence generation

    %<number> - indicates an entity drawn from Sumo
    %v<number> - indicates a verb corresponding to %<number>

*/
{
  "default_settings":{
      // These settings can be over-ridden in individual templates."
      "modal":{
        "on":true,
        "freq":0.1,
        "neg_freq":0.2
      },
      "tense":{
        "on":true,
        "none":5, // none means tense is not encoded in logic and default tense is used in the sentence.
        "past":1,
        "present":1,
        "future":1
      },
      "num_to_gen":100,
      "neg_freq":0.2,
      "question_freq":0.1
  },
  "templates":[
    {
      "name":"Orientation",
      "num_to_gen":50,
      "english":{
        "example":"The book is on the table.",
        "frame":{
            "tense_default":["The %1 %v1 %n{not} %2 the %3.",
                             "The %1 %v1 %n{not} situated %2 the %3.",
                             "The %1 %v1 %n{not} located %2 the %3."]
        },
        "frame_question":{
            "tense_default":["%v1 the %1 %n{not} %2 the %3?"],
            "tense_future":["Will the %1 %n{not} be %2 the %3?",
                            "%v1 the %1 %n{not} going to be %2 the %3?"]
        },
        "%1":{
            "sumo_terms":[{"name":"Artifact","weight":50},
                          {"name":"AnatomicalStructure","weight":10},
                          {"name":"Human","weight":5},
                          {"name":"Animal","weight":5}],
            "type":"subclass",
            "countable":{"possible":true, "freq":0.1}
        },
        "%2":{
            "sumo_terms":[{"name":"PositionalAttribute","weight":1}],
            "type":"instance",
            "countable":{"possible":false}
        },
        "%3":{
            "sumo_terms":[{"name":"Object","weight":1}],
            "type":"subclass",
            "countable":{"possible":true, "freq":0.1}
        },
        "%v1":{
            "verbs":[{"lemma":"be","weight":1}]
        },
        "logic":"(exists (?A1 ?O2 ?T) (and (instance ?A1 %1) (instance ?O2 %3)) %t{%n{not(}(orientation ?A1 ?O2 %2)%n{)}}))"
      }
    }
  ]
}
